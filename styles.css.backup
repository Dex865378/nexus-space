@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=Rajdhani:wght@300;400;500;600;700&display=swap');

:root {
    /* Default Theme (Neon Purple) */
    --neon-purple: #b624ff;
    --neon-purple-bright: #d966ff;
    --neon-purple-dark: #8b00ff;

    /* Common Variables */
    --white: #ffffff;
    --off-white: #f8f8ff;
    --light-bg: #fafafe;
    --card-white: #ffffff;
    --text-dark: #1a1a2e;
    --text-gray: #4a4a5e;
    --border-light: #e5e5f0;

    /* Default Gradients & Shadows */
    --gradient-primary: linear-gradient(135deg, var(--neon-purple) 0%, var(--neon-purple-bright) 100%);
    --gradient-bg: linear-gradient(135deg, #ffffff 0%, #f5f0ff 50%, #faf5ff 100%);
    --gradient-glow: radial-gradient(circle at center, rgba(182, 36, 255, 0.15), transparent);
    --shadow-neon: 0 0 30px rgba(182, 36, 255, 0.6), 0 0 60px rgba(182, 36, 255, 0.3), 0 0 90px rgba(182, 36, 255, 0.15);
    --shadow-card: 0 10px 40px rgba(182, 36, 255, 0.15), 0 4px 12px rgba(0, 0, 0, 0.08);
    --shadow-hover: 0 35px 90px rgba(182, 36, 255, 0.6), 0 15px 40px rgba(182, 36, 255, 0.4);
    --transition-smooth: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Cyber Blue Theme */
[data-theme="blue"] {
    --neon-purple: #00f3ff;
    --neon-purple-bright: #66faff;
    --neon-purple-dark: #00a8b3;
    --gradient-primary: linear-gradient(135deg, #00f3ff 0%, #66faff 100%);
    --gradient-bg: linear-gradient(135deg, #ffffff 0%, #f0fcff 50%, #f5fdff 100%);
    --gradient-glow: radial-gradient(circle at center, rgba(0, 243, 255, 0.15), transparent);
    --shadow-neon: 0 0 30px rgba(0, 243, 255, 0.6), 0 0 60px rgba(0, 243, 255, 0.3), 0 0 90px rgba(0, 243, 255, 0.15);
    --shadow-card: 0 10px 40px rgba(0, 243, 255, 0.15), 0 4px 12px rgba(0, 0, 0, 0.08);
    --shadow-hover: 0 35px 90px rgba(0, 243, 255, 0.6), 0 15px 40px rgba(0, 243, 255, 0.4);
}

/* Plasma Red Theme */
[data-theme="red"] {
    --neon-purple: #ff2a2a;
    --neon-purple-bright: #ff6666;
    --neon-purple-dark: #b30000;
    --gradient-primary: linear-gradient(135deg, #ff2a2a 0%, #ff6666 100%);
    --gradient-bg: linear-gradient(135deg, #ffffff 0%, #fff0f0 50%, #fff5f5 100%);
    --gradient-glow: radial-gradient(circle at center, rgba(255, 42, 42, 0.15), transparent);
    --shadow-neon: 0 0 30px rgba(255, 42, 42, 0.6), 0 0 60px rgba(255, 42, 42, 0.3), 0 0 90px rgba(255, 42, 42, 0.15);
    --shadow-card: 0 10px 40px rgba(255, 42, 42, 0.15), 0 4px 12px rgba(0, 0, 0, 0.08);
    --shadow-hover: 0 35px 90px rgba(255, 42, 42, 0.6), 0 15px 40px rgba(255, 42, 42, 0.4);
}

/* Toxic Green Theme */
[data-theme="green"] {
    --neon-purple: #39ff14;
    --neon-purple-bright: #8eff75;
    --neon-purple-dark: #1e8f0a;
    --gradient-primary: linear-gradient(135deg, #39ff14 0%, #8eff75 100%);
    --gradient-bg: linear-gradient(135deg, #ffffff 0%, #f2fff0 50%, #f7fff5 100%);
    --gradient-glow: radial-gradient(circle at center, rgba(57, 255, 20, 0.15), transparent);
    --shadow-neon: 0 0 30px rgba(57, 255, 20, 0.6), 0 0 60px rgba(57, 255, 20, 0.3), 0 0 90px rgba(57, 255, 20, 0.15);
    --shadow-card: 0 10px 40px rgba(57, 255, 20, 0.15), 0 4px 12px rgba(0, 0, 0, 0.08);
    --shadow-hover: 0 35px 90px rgba(57, 255, 20, 0.6), 0 15px 40px rgba(57, 255, 20, 0.4);
}

/* Golden Age Theme */
[data-theme="gold"] {
    --neon-purple: #ffd700;
    --neon-purple-bright: #ffe44d;
    --neon-purple-dark: #b39700;
    --gradient-primary: linear-gradient(135deg, #ffd700 0%, #ffe44d 100%);
    --gradient-bg: linear-gradient(135deg, #ffffff 0%, #fffdf0 50%, #fffef5 100%);
    transition: var(--transition-smooth);
}

.background-animation {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
    pointer-events: none;
}

.star {
    position: absolute;
    width: 6px;
    height: 6px;
    background: var(--neon-purple);
    clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
    animation: twinkle 3s infinite, float 10s infinite;
    filter: drop-shadow(0 0 4px rgba(182, 36, 255, 0.8));
}

@keyframes twinkle {

    0%,
    100% {
        opacity: 0.4;
        transform: scale(0.8);
    }

    50% {
        opacity: 1;
        transform: scale(1.2);
    }
}

@keyframes float {

    0%,
    100% {
        transform: translateY(0px) rotate(0deg);
    }

    50% {
        transform: translateY(-20px) rotate(180deg);
    }
}

header {
    padding: 1.5rem 5%;
    background: var(--card-white);
    backdrop-filter: blur(20px);
    border-bottom: 3px solid var(--neon-purple);
    position: sticky;
    top: 0;
    z-index: 1000;
    box-shadow: var(--shadow-card);
    transition: var(--transition-smooth);
}

.header-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.logo {
    font-family: 'Orbitron', sans-serif;
    font-size: 2.5rem;
    font-weight: 900;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: 2px;
    animation: glow-pulse 2s infinite;
}

@keyframes glow-pulse {

    0%,
    100% {
        filter: drop-shadow(0 0 10px rgba(182, 36, 255, 0.3));
    }

    50% {
        filter: drop-shadow(0 0 20px rgba(182, 36, 255, 0.6));
    }
}

.dark-mode-toggle {
    padding: 0.8rem 1.5rem;
    background: var(--card-white);
    border: 2px solid var(--border-light);
    border-radius: 12px;
    color: var(--text-dark);
    list-style: none;
    flex-wrap: wrap;
}

nav a,
button,
.filter-btn,
.view-btn {
    color: var(--text-dark);
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: 600;
    padding: 0.8rem 1.5rem;
    border: 2px solid var(--border-light);
    border-radius: 12px;
    transition: var(--transition-smooth);
    position: relative;
    overflow: hidden;
    letter-spacing: 1px;
    cursor: pointer;
    background: var(--card-white);
}

nav a::before,
button::before,
.filter-btn::before,
.view-btn::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 12px;
    padding: 2px;
    background: var(--gradient-primary);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: var(--transition-smooth);
}

nav a:hover::before,
button:hover::before,
.filter-btn:hover::before,
.view-btn:hover::before {
    opacity: 1;
    animation: neon-glow 1.5s infinite;
}

@keyframes neon-glow {

    0%,
    100% {
        filter: drop-shadow(0 0 8px rgba(182, 36, 255, 0.8));
    }

    50% {
        filter: drop-shadow(0 0 20px rgba(182, 36, 255, 1));
    }
}

nav a:hover,
button:hover,
.filter-btn:hover,
.view-btn:hover {
    color: var(--neon-purple-bright);
    border-color: var(--neon-purple);
    box-shadow: var(--shadow-neon);
    transform: translateY(-2px);
}

nav a.active,
.filter-btn.active,
.view-btn.active {
    color: var(--white);
    border-color: var(--neon-purple);
    background: var(--gradient-primary);
    box-shadow: var(--shadow-neon);
}

.hero-banner {
    background: linear-gradient(135deg, rgba(182, 36, 255, 0.1) 0%, rgba(217, 102, 255, 0.05) 100%);
    padding: 4rem 5%;
    text-align: center;
    border-bottom: 3px solid var(--neon-purple);
    box-shadow: 0 10px 40px rgba(182, 36, 255, 0.1);
    position: relative;
    overflow: hidden;
}

.hero-banner::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: var(--gradient-glow);
    animation: rotate-glow 20s linear infinite;
    opacity: 0.5;
}

@keyframes rotate-glow {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

.hero-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 4.5rem;
    font-weight: 900;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1.5rem;
    letter-spacing: 4px;
    position: relative;
    z-index: 1;
}

.hero-subtitle {
    font-size: 1.6rem;
    color: var(--text-gray);
    font-weight: 400;
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 5%;
}

.section-header {
    text-align: center;
    margin-bottom: 4rem;
}

.section-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 3.5rem;
    font-weight: 900;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    letter-spacing: 3px;
}

.section-description {
    font-size: 1.3rem;
    color: var(--text-gray);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
}

.search-controls {
    display: flex;
    gap: 2rem;
    margin: 3rem 0;
    padding: 2rem;
    background: var(--card-white);
    border: 3px solid var(--neon-purple);
    border-radius: 20px;
    box-shadow: var(--shadow-card);
    flex-wrap: wrap;
    align-items: center;
}

.search-bar {
    flex: 1;
    min-width: 250px;
}

.search-bar input {
    width: 100%;
    padding: 1rem 1.5rem;
    font-size: 1.1rem;
    border: 2px solid var(--border-light);
    border-radius: 12px;
    background: var(--card-white);
    color: var(--text-dark);
    font-family: 'Rajdhani', sans-serif;
    font-weight: 500;
    transition: var(--transition-smooth);
}

.search-bar input:focus {
    outline: none;
    border-color: var(--neon-purple);
    box-shadow: 0 0 20px rgba(182, 36, 255, 0.3);
}

.filter-controls,
.view-toggle {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}

.vehicles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2.5rem;
    padding: 2rem 0;
}

.vehicles-grid.list-view {
    grid-template-columns: 1fr;
}

.vehicles-grid.list-view .vehicle-card {
    display: grid;
    grid-template-columns: 300px 1fr;
}

.vehicle-card {
    background: var(--card-white);
    border: 3px solid var(--border-light);
    border-radius: 24px;
    overflow: hidden;
    cursor: pointer;
    transition: var(--transition-smooth);
    position: relative;
    box-shadow: var(--shadow-card);
}

.vehicle-card.hidden {
    display: none;
}

.vehicle-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: var(--gradient-glow);
    opacity: 0;
    transition: var(--transition-smooth);
    z-index: 0;
}

.vehicle-card:hover::before {
    opacity: 1;
    animation: rotate-glow 3s linear infinite;
}

.vehicle-card:hover {
    transform: translateY(-25px) scale(1.05);
    border-color: var(--neon-purple-bright);
    box-shadow: var(--shadow-hover);
    filter: brightness(1.2);
}

.vehicle-image {
    width: 100%;
    height: 250px;
    object-fit: cover;
    transition: var(--transition-smooth);
    position: relative;
    z-index: 1;
}

.vehicle-card:hover .vehicle-image {
    transform: scale(1.1);
    filter: brightness(1.3) saturate(1.3);
}

.vehicle-info {
    padding: 2rem;
    position: relative;
    z-index: 1;
    background: var(--card-white);
}

.vehicle-name {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--neon-purple);
    margin-bottom: 1.5rem;
    letter-spacing: 2px;
    transition: var(--transition-smooth);
}

.vehicle-card:hover .vehicle-name {
    color: var(--neon-purple-bright);
    text-shadow: 0 0 25px rgba(182, 36, 255, 0.7);
    transform: translateX(10px);
}

.vehicle-specs {
    display: grid;
    gap: 0.8rem;
}

.spec-item {
    display: flex;
    justify-content: space-between;
    padding: 0.8rem 1rem;
    background: linear-gradient(135deg, rgba(182, 36, 255, 0.05), rgba(217, 102, 255, 0.02));
    border-radius: 10px;
    border-left: 4px solid var(--neon-purple);
    transition: var(--transition-smooth);
}

.vehicle-card:hover .spec-item {
    background: linear-gradient(135deg, rgba(182, 36, 255, 0.2), rgba(217, 102, 255, 0.1));
    transform: translateX(8px);
    box-shadow: 0 0 15px rgba(182, 36, 255, 0.3);
}

.spec-label {
    font-weight: 600;
    color: var(--neon-purple-dark);
    font-size: 1rem;
}

.spec-value {
    color: var(--text-dark);
    font-weight: 500;
    font-size: 1rem;
}

.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    z-index: 2000;
}

body.dark-mode .modal {
    background: rgba(10, 10, 15, 0.95);
}

.modal.active {
    box-shadow: var(--shadow-neon);
}

.stats-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin: 4rem 0;
    padding: 3rem;
    background: var(--card-white);
    border: 3px solid var(--neon-purple);
    border-radius: 20px;
    box-shadow: var(--shadow-card);
}

.stat-item {
    text-align: center;
    padding: 1.5rem;
    border-radius: 12px;
    background: linear-gradient(135deg, rgba(182, 36, 255, 0.05), rgba(217, 102, 255, 0.02));
    transition: var(--transition-smooth);
}

.stat-item:hover {
    transform: translateY(-15px) scale(1.05);
    background: linear-gradient(135deg, rgba(182, 36, 255, 0.2), rgba(217, 102, 255, 0.1));
    box-shadow: var(--shadow-neon);
}

.stat-number {
    font-family: 'Orbitron', sans-serif;
    font-size: 3rem;
    font-weight: 900;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
}

.stat-label {
    font-size: 1.1rem;
    color: var(--text-gray);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
}

footer {
    background: var(--card-white);
    border-top: 3px solid var(--neon-purple);
    padding: 3rem 5%;
    text-align: center;
    margin-top: 5rem;
    box-shadow: 0 -10px 40px rgba(182, 36, 255, 0.15);
}

.footer-content {
    max-width: 1400px;
    margin: 0 auto;
    font-size: 1.1rem;
    color: var(--text-dark);
}

.footer-link {
    color: var(--neon-purple-bright);
    text-decoration: none;
    transition: var(--transition-smooth);
    font-weight: 600;
}

.footer-link:hover {
    text-shadow: var(--shadow-neon);
    color: var(--neon-purple-dark);
}

::-webkit-scrollbar {
    width: 14px;
}

::-webkit-scrollbar-track {
    background: var(--off-white);
}

::-webkit-scrollbar-thumb {
    list-style: none;
    gap: 2rem;
    align-items: center;
    margin: 0;
    padding: 0;
}

.dropdown {
    position: relative;
    display: inline-block;
}

.dropbtn {
    background: transparent;
    color: var(--text-dark);
    font-size: 1.1rem;
    font-weight: 600;
    border: none;
    cursor: pointer;
    padding: 0.8rem 1.2rem;
    font-family: inherit;
    transition: var(--transition-smooth);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border-radius: 12px;
}

.dropbtn:hover,
.dropdown:hover .dropbtn {
    color: var(--neon-purple);
    text-shadow: 0 0 10px rgba(182, 36, 255, 0.4);
    background: rgba(182, 36, 255, 0.05);
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: var(--card-white);
    min-width: 220px;
    box-shadow: var(--shadow-card);
    border-radius: 16px;
    padding: 1rem;
    z-index: 1001;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 2px solid var(--border-light);
    backdrop-filter: blur(20px);
    animation: slideDown 0.3s ease forwards;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translate(-50%, -10px);
    }

    to {
        opacity: 1;
        transform: translate(-50%, 0);
    }
}

.dropdown:hover .dropdown-content {
    display: block;
}

.dropdown-content a {
    color: var(--text-dark);
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    border-radius: 8px;
    transition: var(--transition-smooth);
    font-weight: 500;
    margin-bottom: 0.2rem;
}

.dropdown-content a:hover {
    background: var(--gradient-primary);
    color: var(--white);
    transform: translateX(5px);
    box-shadow: var(--shadow-neon);
}

/* Palette Selector within Dropdown */
.palette-selector.dropdown-content {
    min-width: 260px;
    display: none;
    /* Controlled by hover on parent */
    grid-template-columns: 1fr;
    gap: 0.5rem;
}

.dropdown:hover .palette-selector.dropdown-content {
    display: grid;
}

.theme-option {
    display: flex !important;
    align-items: center;
    gap: 10px;
}

.color-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.5);
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

/* New Themes */
[data-theme="pink"] {
    --neon-purple: #ff00ff;
    --neon-purple-bright: #ff66ff;
    --neon-purple-dark: #b300b3;
    --gradient-primary: linear-gradient(135deg, #ff00ff 0%, #ff66ff 100%);
    --gradient-glow: radial-gradient(circle at center, rgba(255, 0, 255, 0.15), transparent);
    --shadow-neon: 0 0 30px rgba(255, 0, 255, 0.6), 0 0 60px rgba(255, 0, 255, 0.3);
}

[data-theme="yellow"] {
    --neon-purple: #ffff00;
    --neon-purple-bright: #ffff66;
    --neon-purple-dark: #b3b300;
    --gradient-primary: linear-gradient(135deg, #ffff00 0%, #ffff66 100%);
    --gradient-glow: radial-gradient(circle at center, rgba(255, 255, 0, 0.15), transparent);
    --shadow-neon: 0 0 30px rgba(255, 255, 0, 0.6), 0 0 60px rgba(255, 255, 0, 0.3);
}

[data-theme="cyan"] {
    --neon-purple: #00ffff;
    --neon-purple-bright: #66ffff;
    --neon-purple-dark: #00b3b3;
    --gradient-primary: linear-gradient(135deg, #00ffff 0%, #66ffff 100%);
    --gradient-glow: radial-gradient(circle at center, rgba(0, 255, 255, 0.15), transparent);
    --shadow-neon: 0 0 30px rgba(0, 255, 255, 0.6), 0 0 60px rgba(0, 255, 255, 0.3);
}

/* Background Styles */
body[data-bg="nebula"] .background-animation {
    background: radial-gradient(circle at 50% 50%, #1a0b2e 0%, #000000 100%);
}

body[data-bg="warp"] .background-animation {
    .header-content {
        flex-direction: column;
        gap: 1.5rem;
    }

    nav ul {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }

    .logo {
        font-size: 2rem;
    }

    .hero-title {
        font-size: 3rem;
    }

    .section-title {
        font-size: 2.5rem;
    }

    .vehicles-grid {
        grid-template-columns: 1fr;
    }

    .modal-content {
        padding: 2rem;
    }

    .stats-section {
        grid-template-columns: 1fr;
    }

    .search-controls {
        flex-direction: column;
        gap: 1rem;
    }

    .vehicles-grid.list-view .vehicle-card {
        grid-template-columns: 1fr;
    }
}

/* Dropdown Styles */
.nav-links {
    display: flex;
    list-style: none;
    gap: 2rem;
    align-items: center;
    margin: 0;
    padding: 0;
}

.dropdown {
    position: relative;
    display: inline-block;
}

.dropbtn {
    background: transparent;
    color: var(--text-dark);
    font-size: 1.1rem;
    font-weight: 600;
    border: none;
    cursor: pointer;
    padding: 0.8rem 1.2rem;
    font-family: inherit;
    transition: var(--transition-smooth);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border-radius: 12px;
}

.dropbtn:hover,
.dropdown:hover .dropbtn {
    color: var(--neon-purple);
    text-shadow: 0 0 10px rgba(182, 36, 255, 0.4);
    background: rgba(182, 36, 255, 0.05);
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: var(--card-white);
    min-width: 220px;
    box-shadow: var(--shadow-card);
    border-radius: 16px;
    padding: 1rem;
    z-index: 1001;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    border: 2px solid var(--border-light);
    backdrop-filter: blur(20px);
    animation: slideDown 0.3s ease forwards;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translate(-50%, -10px);
    }

    to {
        opacity: 1;
        transform: translate(-50%, 0);
    }
}

.dropdown:hover .dropdown-content {
    display: block;
}

.dropdown-content a {
    color: var(--text-dark);
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    border-radius: 8px;
    transition: var(--transition-smooth);
    font-weight: 500;
    margin-bottom: 0.2rem;
}

.dropdown-content a:hover {
    background: var(--gradient-primary);
    color: var(--white);
    transform: translateX(5px);
    box-shadow: var(--shadow-neon);
}

/* Palette Selector within Dropdown */
.palette-selector.dropdown-content {
    min-width: 260px;
    display: none;
    /* Controlled by hover on parent */
    grid-template-columns: 1fr;
    gap: 0.5rem;
}

.dropdown:hover .palette-selector.dropdown-content {
    display: grid;
}

.theme-option {
    display: flex !important;
    align-items: center;
    gap: 10px;
}

.color-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.5);
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

/* New Themes */
[data-theme="pink"] {
    --neon-purple: #ff00ff;
    --neon-purple-bright: #ff66ff;
    --neon-purple-dark: #b300b3;
    --gradient-primary: linear-gradient(135deg, #ff00ff 0%, #ff66ff 100%);
    --gradient-glow: radial-gradient(circle at center, rgba(255, 0, 255, 0.15), transparent);
    --shadow-neon: 0 0 30px rgba(255, 0, 255, 0.6), 0 0 60px rgba(255, 0, 255, 0.3);
}

[data-theme="yellow"] {
    --neon-purple: #ffff00;
    --neon-purple-bright: #ffff66;
    --neon-purple-dark: #b3b300;
    --gradient-primary: linear-gradient(135deg, #ffff00 0%, #ffff66 100%);
    --gradient-glow: radial-gradient(circle at center, rgba(255, 255, 0, 0.15), transparent);
    --shadow-neon: 0 0 30px rgba(255, 255, 0, 0.6), 0 0 60px rgba(255, 255, 0, 0.3);
}

[data-theme="cyan"] {
    --neon-purple: #00ffff;
    --neon-purple-bright: #66ffff;
    --neon-purple-dark: #00b3b3;
    --gradient-primary: linear-gradient(135deg, #00ffff 0%, #66ffff 100%);
    --gradient-glow: radial-gradient(circle at center, rgba(0, 255, 255, 0.15), transparent);
    --shadow-neon: 0 0 30px rgba(0, 255, 255, 0.6), 0 0 60px rgba(0, 255, 255, 0.3);
}

/* Background Styles */
body[data-bg="nebula"] .background-animation {
    background: radial-gradient(circle at 50% 50%, #1a0b2e 0%, #000000 100%);
}

body[data-bg="warp"] .background-animation {
    background: linear-gradient(90deg, #000000 0%, #1a0b2e 50%, #000000 100%);
    background-size: 200% 100%;
    animation: warpSpeed 5s linear infinite;
}

@keyframes warpSpeed {
    0% {
        background-position: 100% 0;
    }

    100% {
        background-position: -100% 0;
    }
}

body[data-bg="matrix"] .background-animation {
    background-color: #000;
    background-image: linear-gradient(rgba(0, 255, 0, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 255, 0, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
}

/* Splash Screen */
.splash-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 9999;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: opacity 1s ease-out, visibility 1s ease-out;
}

.splash-content {
    text-align: center;
    color: #fff;
    animation: fadeIn 1s ease-out;
}

.splash-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 4rem;
    margin-bottom: 1rem;
    color: var(--neon-purple);
    text-shadow: 0 0 20px var(--neon-purple);
    letter-spacing: 5px;
}

.splash-subtitle {
    font-size: 1.5rem;
    margin-bottom: 3rem;
    opacity: 0.8;
}

.splash-btn {
    padding: 1.2rem 3rem;
    font-size: 1.2rem;
    background: transparent;
    color: var(--neon-purple);
    border: 2px solid var(--neon-purple);
    border-radius: 50px;
    cursor: pointer;
    font-family: 'Orbitron', sans-serif;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 2px;
    box-shadow: 0 0 15px rgba(182, 36, 255, 0.3);
}

.splash-btn:hover {
    background: var(--neon-purple);
    color: #fff;
    box-shadow: 0 0 30px var(--neon-purple);
    transform: scale(1.05);
}

.splash-screen.hidden {
    opacity: 0;
    visibility: hidden;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}